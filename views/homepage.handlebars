<section class="col-12 px-5">
    {{#each posts as |post|}}
    <div class="card mb-3">
        <div class="card-header d-flex flex-row justify-content-between align-items-center">
            <h3>{{post.title}}</h3>
            <h6>Posted by {{user.name}} on {{format_date post.date_created}}</h6>
        </div>
        <div class="card-body">
            <h6>{{post.description}}</h6>
        </div>
    </div>
    {{/each}}
</section>